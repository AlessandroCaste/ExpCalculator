<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <EditText
            android:id="@+id/numeroPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Numero dei PG"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/livelloPg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Livello dei PG"
            android:inputType="textPersonName" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:onClick="pressMe"
        app:backgroundTint="@android:color/black"
        android:scaleType="centerCrop"
        app:fabCustomSize="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/untitled" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center"
            android:text="Results:"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/easyChallenge"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Easy Challenge!"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/mediumChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Challenge!"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/hardChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hard Challenge!"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/deadlyChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legendary Challenge!"
            android:textSize="22sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>